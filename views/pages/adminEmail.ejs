<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/_header') %>
    <title>Admin Email Panel</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/all.min.css" />
    <style>
      body {
        background-color: #f4f4f9;
        font-family: "Arial", sans-serif;
      }
      .section {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
      }
      .container {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 30px;
        width: 100%;
        max-width: 600px;
      }
      .section-title {
        font-size: 1.5rem;
        font-weight: 600;
        text-align: center;
        margin-bottom: 30px;
      }
      label {
        font-size: 1rem;
        margin-bottom: 5px;
      }
      input,
      textarea {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 5px;
        border: 1px solid #ddd;
        font-size: 1rem;
      }
      button {
        width: 100%;
        padding: 10px;
        background-color: #6f42c1;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 1.1rem;
        cursor: pointer;
      }
      button:hover {
        background-color: #5a34a1;
      }
      .logout-btn {
        text-align: center;
        margin-top: 20px;
      }
      .logout-btn a {
        color: #fff;
        background-color: #d9534f;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 1.1rem;
        text-decoration: none;
      }
      .logout-btn a:hover {
        background-color: #c9302c;
      }

      /* Toast Styles */
      .toast {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 1050;
        min-width: 200px;
        opacity: 0;
        transition: opacity 0.5s ease;
      }
      .toast.show {
        opacity: 1;
      }

      .toast-header {
        background-color: #6f42c1;
        color: white;
        font-weight: bold;
      }

      .toast-body {
        padding: 10px;
        color: #333;
      }

      .toast-close-btn {
        background: none;
        border: none;
        color: white;
        font-size: 1.2rem;
        margin-left: auto;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <section class="section">
      <div class="container">
        <h2 class="pb-2 section-title">Send Email to Users</h2>
        <form action="/admin/send-admin-email" method="POST">
          <div class="mb-3">
            <label for="recipientEmail" class="form-label"
              >Recipient Email</label
            >
            <input
              type="email"
              id="recipientEmail"
              name="recipientEmail"
              class="form-control"
              required
            />
          </div>
          <div class="mb-3">
            <label for="subject" class="form-label">Subject</label>
            <input
              type="text"
              id="subject"
              name="subject"
              class="form-control"
              required
            />
          </div>
          <div class="mb-3">
            <label for="message" class="form-label">Message</label>
            <textarea
              id="message"
              name="message"
              class="form-control"
              rows="5"
              required
            ></textarea>
          </div>
          <button type="submit">Send Email</button>
        </form>
        <div class="logout-btn">
          <a href="/auth/logout">Logout</a>
        </div>

        <!-- Toast notification for successful email submission -->
        <% if (typeof successMessage !== 'undefined') { %>
        <div id="toast" class="toast show">
          <div class="toast-header">
            <strong class="me-auto">Success</strong>
            <button
              type="button"
              class="toast-close-btn"
              onclick="closeToast()"
            >
              Ã—
            </button>
          </div>
          <div class="toast-body"><%= successMessage %></div>
        </div>
        <% } %>
      </div>
    </section>

    <!-- Bootstrap and JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      setTimeout(function () {
        var toast = document.getElementById("toast");
        if (toast) {
          toast.classList.remove("show");
          toast.classList.add("hide");
        }
      }, 5000);

      function closeToast() {
        var toast = document.getElementById("toast");
        toast.classList.remove("show");
        toast.classList.add("hide");
      }
    </script>
  </body>
</html>
